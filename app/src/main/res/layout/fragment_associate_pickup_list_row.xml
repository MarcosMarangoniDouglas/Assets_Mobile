<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="125dp">

    <TextView
        android:id="@+id/finalTxtOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorAccent"
        android:text="@string/order_number"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorAccent"
        android:text="txtOrderNumber"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/finalTxtOrder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/finalCustName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorAccent"
        android:text="@string/custname"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCustName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/colorAccent"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/finalCustName"
        app:layout_constraintTop_toTopOf="parent" />

<android.support.v7.widget.CardView
        android:id="@+id/cardImgMove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/cardImgMove2"
        app:layout_constraintTop_toTopOf="parent"
        android:shape="ring"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp">
        <ImageButton
            android:id="@+id/btnDetailedReport"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_description_black_24dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardImgMove2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:shape="ring"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp">
        <ImageButton
            android:id="@+id/btnCompleteTransaction"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_attach_money_black_24dp" />
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>