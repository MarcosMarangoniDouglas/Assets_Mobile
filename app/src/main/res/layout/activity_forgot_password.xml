<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.ForgotPasswordActivity"
  android:background="@drawable/gradient_background">

  <android.support.v7.widget.Toolbar
    android:id="@+id/forgotPasswordToolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:theme="?attr/actionBarTheme"
    app:title="Forgot Password"
    app:titleTextAppearance="@style/ActionBar.nameText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:navigationIcon="@drawable/back_arrow_clipart"/>

  <android.support.constraint.Guideline
    android:id="@+id/fieldsGuideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.16" />

  <TextView
    android:id="@+id/txtLocation"
    android:layout_width="121dp"
    android:layout_height="24dp"
    android:fontFamily="@font/montserrat"
    android:text="@string/txtUsername"
    android:textColor="@android:color/white"
    android:textSize="@dimen/txtInput"
    app:layout_constraintBottom_toTopOf="@+id/editUsername"
    app:layout_constraintStart_toStartOf="@+id/editUsername" />

  <EditText
    android:id="@+id/editLocation"
    android:layout_width="325dp"
    android:layout_height="43dp"
    android:layout_marginTop="56dp"
    android:background="@drawable/edit_background"
    android:drawableStart="@drawable/email_white_clipart"
    android:ems="10"
    android:inputType="textEmailAddress"
    android:paddingStart="@dimen/editPaddingLeftRightIcon"
    android:paddingEnd="@dimen/editPaddingLeftRightIcon"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.465"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/fieldsGuideline" />

  <EditText
    android:id="@+id/editCapacity"
    android:layout_width="325dp"
    android:layout_height="46dp"
    android:layout_marginTop="144dp"
    android:background="@drawable/edit_background"
    android:drawableStart="@drawable/hide_password_clipart"
    android:ems="10"
    android:inputType="textPassword"
    android:paddingStart="@dimen/editPaddingLeftRightIcon"
    android:paddingEnd="@dimen/editPaddingLeftRightIcon"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.465"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/fieldsGuideline" />

  <TextView
    android:id="@+id/txtCapacity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/montserrat"
    android:text="@string/txtPassword"
    android:textColor="@android:color/white"
    android:textSize="@dimen/txtInput"
    app:layout_constraintBottom_toTopOf="@+id/editPassword"
    app:layout_constraintStart_toStartOf="@+id/editPassword" />

  <TextView
    android:id="@+id/txtRepeatPassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/montserrat"
    android:text="@string/txtRepeatPassword"
    android:textColor="@android:color/white"
    android:textSize="@dimen/txtInput"
    app:layout_constraintBottom_toTopOf="@+id/editRepeatPassword"
    app:layout_constraintStart_toStartOf="@+id/editRepeatPassword" />

  <EditText
    android:id="@+id/editRepeatPassword"
    android:layout_width="325dp"
    android:layout_height="46dp"
    android:layout_marginTop="228dp"
    android:background="@drawable/edit_background"
    android:drawableStart="@drawable/hide_password_clipart"
    android:ems="10"
    android:inputType="textPassword"
    android:paddingStart="@dimen/editPaddingLeftRightIcon"
    android:paddingEnd="@dimen/editPaddingLeftRightIcon"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/fieldsGuideline" />

  <android.support.constraint.Guideline
    android:id="@+id/guideline3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.68" />

  <Button
    android:id="@+id/btnResetPassword"
    android:layout_width="325dp"
    android:layout_height="52dp"
    android:background="@color/colorPrimaryDark"
    android:text="@string/btnResetPassword"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline3"
    android:onClick="onResetPassword"/>
</android.support.constraint.ConstraintLayout>