<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="125dp"
  android:layout_margin="5dp"
  app:cardElevation="3dp">
  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="12dp"
      app:layout_constraintBottom_toBottomOf="@+id/txtDate"
      app:layout_constraintEnd_toStartOf="@+id/txtDate"
      app:layout_constraintTop_toTopOf="@+id/txtDate"
      app:layout_constraintVertical_bias="1.0"
      app:srcCompat="@drawable/ic_date_range_black_24dp" />

    <TextView
      android:id="@+id/txtDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/txtPlaceholderKind"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="52dp"
      android:text="Kind: "
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/txtKind"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/txtPlaceholderKind"
      app:layout_constraintStart_toEndOf="@+id/txtPlaceholderKind"
      app:layout_constraintTop_toTopOf="@+id/txtPlaceholderKind"
      app:layout_constraintVertical_bias="1.0" />

    <TextView
      android:id="@+id/txtPlaceholderValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="172dp"
      android:layout_marginTop="52dp"
      android:text="Value:"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/txtValue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      app:layout_constraintBottom_toBottomOf="@+id/txtPlaceholderValue"
      app:layout_constraintStart_toEndOf="@+id/txtPlaceholderValue"
      app:layout_constraintTop_toTopOf="@+id/txtPlaceholderValue"
      app:layout_constraintVertical_bias="1.0" />

    <TextView
      android:id="@+id/txtComment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>