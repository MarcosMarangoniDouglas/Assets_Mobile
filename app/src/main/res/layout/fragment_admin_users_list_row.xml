<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="150dp">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profile_image"
    android:layout_width="96dp"
    android:layout_height="96dp"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginStart="16dp"
    android:src="@drawable/ic_person_black_24dp"
    app:civ_border_color="#DEDEDE"
    app:civ_border_width="2dp" />

  <TextView
      android:id="@+id/txtUsername"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginStart="118dp"
      android:layout_marginTop="25dp"
      android:fontFamily="@font/montserrat"
      android:textColor="@color/colorAccent"
      android:text="something@something.com" />

  <TextView
      android:id="@+id/txtName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="117dp"
      android:layout_marginBottom="65dp"
      android:fontFamily="@font/montserrat"
      android:textColor="@color/colorAccent"
      android:text="Something Anything"
      android:textSize="20sp" />

  <android.support.v7.widget.CardView
      android:id="@+id/cardImgMove2"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="15dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:shape="ring"
      app:cardElevation="5dp"
      app:cardCornerRadius="20dp">
        <ImageButton
            android:id="@+id/btnMoreOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />
  </android.support.v7.widget.CardView>

  <TextView
      android:id="@+id/txtRole"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="116dp"
      android:layout_marginTop="101dp"
      android:fontFamily="@font/montserrat"
      android:textColor="@color/colorAccent"
      android:textSize="14sp"
      android:text="Role" />

  <android.support.v7.widget.CardView
      android:id="@+id/cardImgMove"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="349dp"
      android:layout_marginTop="77dp"
      android:layout_marginEnd="14dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/description"
      app:layout_constraintTop_toBottomOf="@+id/cost"
      android:shape="ring"
      app:cardElevation="5dp"
      app:cardCornerRadius="20dp">
      <ImageButton
          android:id="@+id/btnRemoveUser"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@android:color/transparent"
          android:scaleType="fitCenter"
          app:srcCompat="@drawable/ic_delete_black_24dp" />
  </android.support.v7.widget.CardView>

</RelativeLayout>